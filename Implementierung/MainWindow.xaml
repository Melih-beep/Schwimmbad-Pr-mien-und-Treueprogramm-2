<Window x:Class="SchwimmbadTreueprogramm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Schwimmbad Treueprogramm" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Schwimmbad Treueprogramm" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Name="btnRegisterLogin" Content="Registrieren / Einloggen" Click="btnRegisterLogin_Click" Margin="0,0,0,10"/>
            <Button Name="btnShowPoints" Content="Punkte anzeigen" Click="btnShowPoints_Click" Margin="0,0,0,10"/>
            <Button Name="btnRedeemPoints" Content="Punkte einlösen" Click="btnRedeemPoints_Click" Margin="0,0,0,10"/>
            <Button Name="btnAdjustPoints" Content="Punkte anpassen (Admin)" Click="btnAdjustPoints_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
