<Window x:Class="SchwimmbadTreueprogramm.RegisterLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login &amp; Registrierung" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="txtUsername" Text="Benutzername"
                 Foreground="Gray"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <PasswordBox x:Name="txtPassword" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0"/>
    </Grid>
</Window>
