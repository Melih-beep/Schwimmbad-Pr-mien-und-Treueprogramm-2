<Window x:Class="SchwimmbadTreueprogramm.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="txtAdminCode" Text="Admin-Code eingeben"
                 Foreground="Gray"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <Button Content="Bestätigen" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
