<Window x:Class="SchwimmbadTreueprogramm.ShowPointsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Punkte anzeigen" Height="250" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock Text="Ihre Punkte:" FontSize="16" />
            <TextBlock x:Name="txtPoints" FontSize="24" FontWeight="Bold"/>
            <Button Content="Schließen" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
